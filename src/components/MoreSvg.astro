---
import ForwardIcon from '@icons/ic--outline-forward.svg';
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
    title?: string;
}

const { title, ...attrs } = Astro.props;
const resolvedTitle = title ?? 'more';
---

<a title={resolvedTitle} {...attrs}><ForwardIcon id="icon"/></a>

<style lang="scss">
    @use '@scss/color';
    a {
        display: inline-flex;
        align-items: center;

        svg {
            height: .8em;
            color: color.get(color.$forward-icon);
        }
    }
</style>
