---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  href: string;
  fontSize?: string;
}

const { href, fontSize, ...attrs } = Astro.props;
---

<a
  href={href}
  {...attrs}
>
  <slot />
</a>

<style
  define:vars={{
    'a-font-size': fontSize,
  }}
>
  a {
    font-size: var(--a-font-size);
  }
</style>
